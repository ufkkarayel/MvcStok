@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required="" maxlength="50" placeholder="Ürün adını giriniz..." />

    </div>
    <div>
        <label>Markası</label>
        <input type="text" class="form-control" name="MARKA" required="" maxlength="50" placeholder="Ürün markasını giriniz..."/>

    </div>
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m=>m.TBLKATEGORILER.KATEGORIID,(List<SelectListItem>)ViewBag.dgr,new { @class="form-control"})

    </div>
    <div>
        <label>Fiyatı</label>
        <input type="text" class="form-control" name="FIYAT" required="" maxlength="10" placeholder="Ürün fiyatını giriniz..."/>

    </div>
    <div>
        <label>Stok Adet</label>
        <input type="text" class="form-control" name="STOK" required="" maxlength="5" placeholder="Stok adedini giriniz..."/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>

</form>



